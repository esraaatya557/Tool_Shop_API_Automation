<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="E-Commerce API Test Suite" verbose="1">
    <listeners>
        <listener class-name="utils.TestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="User Module" preserve-order="true">
        <classes>
            <class name="tests.UserModuleTest"/>
        </classes>
    </test>

    <test name="Admin Module" preserve-order="true">
        <classes>
            <class name="tests.AdminModuleTest"/>
        </classes>
    </test>

    <test name="Product Module" preserve-order="true">
        <classes>
            <class name="tests.ProductModuleTest"/>
        </classes>
    </test>

    <test name="Category Module" preserve-order="true">
        <classes>
            <class name="tests.CategoryAndBrandModuleTest"/>
        </classes>
    </test>

    <test name="Invoice Module" preserve-order="true">
        <classes>
            <class name="tests.InvoiceModuleTest"/>
        </classes>
    </test>

</suite>